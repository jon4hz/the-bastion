# Sudoers rule for osh-genSSHPFConfigs helper
%osh-accountAddPortForward ALL=(root) NOPASSWD:/usr/bin/env perl -T /opt/bastion/bin/helper/osh-genSSHPFConfigs --account *
%osh-accountDelPortForward ALL=(root) NOPASSWD:/usr/bin/env perl -T /opt/bastion/bin/helper/osh-genSSHPFConfigs --account *
%osh-selfAddPortForward ALL=(root) NOPASSWD:/usr/bin/env perl -T /opt/bastion/bin/helper/osh-genSSHPFConfigs --account *
%osh-selfDelPortForward ALL=(root) NOPASSWD:/usr/bin/env perl -T /opt/bastion/bin/helper/osh-genSSHPFConfigs --account *
%osh-groupAddPortForward ALL=(root) NOPASSWD:/usr/bin/env perl -T /opt/bastion/bin/helper/osh-regenSSHPFConfigsForGroup --group *
%osh-groupDelPortForward ALL=(root) NOPASSWD:/usr/bin/env perl -T /opt/bastion/bin/helper/osh-regenSSHPFConfigsForGroup --group *
%osh-groupAddPortForward ALL=(root) NOPASSWD:/usr/bin/env perl -T /opt/bastion/bin/helper/osh-genSSHPFConfigs --account *
%osh-groupDelPortForward ALL=(root) NOPASSWD:/usr/bin/env perl -T /opt/bastion/bin/helper/osh-genSSHPFConfigs --account *
allowkeeper ALL=(root) NOPASSWD:/usr/bin/env perl -T /opt/bastion/bin/helper/osh-genSSHPFConfigs --account *
allowkeeper ALL=(root) NOPASSWD:/usr/bin/env perl -T /opt/bastion/bin/helper/osh-regenSSHPFConfigsForGroup --group *
%osh-admin ALL=(root) NOPASSWD:/usr/bin/env perl -T /opt/bastion/bin/helper/osh-genSSHPFConfigs --account *
%osh-admin ALL=(root) NOPASSWD:/usr/bin/env perl -T /opt/bastion/bin/helper/osh-genSSHPFConfigs --all-accounts
%osh-admin ALL=(root) NOPASSWD:/usr/bin/env perl -T /opt/bastion/bin/helper/osh-regenSSHPFConfigsForGroup --group *
